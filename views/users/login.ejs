<% layout("/layouts/boilerplate.ejs")%>
<div class="row">
  <div class="col-8 offset-2 mb-3 mt-3">
    <h2 class="mb-3 mt-3">LogIn On WanderLust</h2>
    <form action="/login" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="username" class="fomr-label">Username</label>
            <input name="username" placeholder="enter username" type="text" class="form-control" required>
            <div class="valid-feedback">username looks nice!</div>
            <div class="invalid-feedback">Enter valid username!</div>
        </div>
        <div class="mb-3">
            <label for="password" class="fomr-label">Password</label>
            <input name="password" placeholder="enter password" type="password" class="form-control" required>
            <div class="invalid-feedback">Enter valid password!</div>
        </div>
        <button class="btn btn-success ">login</button>
    </form>
  </div>
</div>
